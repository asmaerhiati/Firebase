<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/remov1" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="249dp"
        android:layout_height="91dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:text="Avec un grand choix de restaurants, vous trouverez toujours votre plat préféré et découvrirez de nouveaux saveurs !"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:srcCompat="@drawable/remov2" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="249dp"
            android:layout_height="91dp"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            android:text="Notre rapidité est notre fierté. Choisissez votre plat, Renseignez l'adresse où vous souhaitez être livré et on vous livre en quelques minutes."
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />



</androidx.constraintlayout.widget.ConstraintLayout>